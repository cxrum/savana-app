<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_nav_graph.xml"
    app:startDestination="@id/emailFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.savana.ui.fragments.registration.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" />

    <fragment
        android:id="@+id/emailFragment"
        android:name="com.savana.ui.fragments.registration.EmailFragment"
        android:label="fragment_email"
        tools:layout="@layout/fragment_email" >
        <action
            android:id="@+id/action_emailFragment_to_nameFragment"
            app:destination="@id/nameFragment" />
    </fragment>

    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.savana.ui.fragments.registration.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" >
        <action
            android:id="@+id/action_passwordFragment_to_avatarFragment"
            app:destination="@id/avatarFragment" />
        <action
            android:id="@+id/action_passwordFragment_to_nameFragment"
            app:destination="@id/nameFragment" />
    </fragment>

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.savana.ui.fragments.registration.NameFragment"
        android:label="fragment_name"
        tools:layout="@layout/fragment_name" >
        <action
            android:id="@+id/action_nameFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />
        <action
            android:id="@+id/action_nameFragment_to_emailFragment"
            app:destination="@id/emailFragment" />
    </fragment>

    <fragment
        android:id="@+id/avatarFragment"
        android:name="com.savana.ui.fragments.registration.SelectAvatarFragment"
        android:label="fragment_avatar"
        tools:layout="@layout/fragment_select_avatar" >
        <action
            android:id="@+id/action_avatarFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
        <action
            android:id="@+id/action_avatarFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />
    </fragment>

</navigation>